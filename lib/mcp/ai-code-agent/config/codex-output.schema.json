{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CodexAnalysisResponse",
  "type": "object",
  "additionalProperties": false,
  "required": ["findings", "overallAssessment", "recommendations"],
  "properties": {
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "severity", "line", "title", "description", "suggestion", "code"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["bug", "security", "performance", "style", "suggestion"]
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low", "info"]
          },
          "line": {
            "type": ["integer", "null"]
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "suggestion": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        }
      }
    },
    "overallAssessment": {
      "type": "string",
      "minLength": 1
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
