{
  "_comment": "Valid configuration with defaults for AGENTS Context Preserver",

  "version": "1.0.0",

  "context_preservation": {
    "enabled": true,
    "max_context_size": 50000,
    "compression_threshold": 40000,
    "preserve_tool_history": true,
    "max_tool_history_items": 20,
    "preserve_file_context": true,
    "max_working_files": 50
  },

  "agents_integration": {
    "enabled": true,
    "global_agents_path": "~/.claude/AGENTS.md",
    "scan_project_agents": true,
    "max_agents_content_size": 10000,
    "include_subagent_definitions": true
  },

  "hooks": {
    "pre_compact": {
      "enabled": true,
      "priority": 100
    },
    "session_start": {
      "enabled": true,
      "restore_context": true,
      "priority": 50
    },
    "post_response": {
      "enabled": false,
      "save_interval": 5
    }
  },

  "storage": {
    "type": "file",
    "path": ".claude/context",
    "max_sessions": 10,
    "auto_cleanup": true,
    "cleanup_after_days": 30
  },

  "summarization": {
    "enabled": true,
    "model": "fast",
    "max_summary_length": 500,
    "preserve_key_decisions": true,
    "preserve_blockers": true
  },

  "logging": {
    "level": "info",
    "file": ".claude/logs/context-preserver.log",
    "max_file_size": "10MB",
    "max_files": 5
  },

  "advanced": {
    "debug_mode": false,
    "telemetry_enabled": false,
    "experimental_features": []
  }
}
